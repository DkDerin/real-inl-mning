@model EcommerceWeb.ViewModels.UserCRUDViewModel
@{
    /**/

    ViewBag.Title = "Edit";
}
<h2>Give user a new role</h2>

@if (Request.IsAuthenticated)
{


    using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <table class="table">
            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.UserRoles)
            <tr>
                <td>Email</td>
                <td>@Html.DisplayFor(model => model.Email, new { @class = "form-control" })</td>
            </tr>

            <tr>
                <td>Role</td>
                <td>
                    @Html.DropDownListFor(model => model.UserDropDown, Model.AvailableUsers)
                </td>
            </tr>
        </table>

        <input type="submit" value="Save" class="btn btn-default" style="background-color:lightgreen" />
    }

}