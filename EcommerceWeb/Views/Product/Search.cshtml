@model  EcommerceWeb.ViewModels.ProductIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Search</h2>

    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Name", "Search", new { searchString = Model.SearchAll, sortOrder = Model.SortName })
            </th>
            <th>
               Description
            </th>
            <th>
                @Html.ActionLink("Price", "Search", new { searchString = Model.SearchAll, sortOrder = Model.SortPrice })
            </th>
            <th></th>
        </tr>


       @foreach(var item in Model.ProductList)
        {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                 @item.Description
            </td>

            <td>
                @item.Price
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
        }

    </table>

<p>
    @Html.ActionLink("Back to Categories", "Index", "Category")
</p>