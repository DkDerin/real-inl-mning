@model EcommerceWeb.ViewModels.ProductCreateViewModel
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h3>Are you sure you want to delete this?</h3>

    <table class="table">
        <tr>
            <td>Name</td>
            <td>
                @Html.DisplayTextFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>

        <tr>
            <td>Description</td>
            <td>
                @Html.DisplayTextFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>

        <tr>
            <td>Price</td>
            <td>
                @Html.DisplayTextFor(Model => Model.Price)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>

    </table>

    <input type="submit" value="Delete" class="btn btn-default" style="background-color:red" />
    <br />
    @Html.ActionLink("Back to List", "Index", new { id = Model.CategoryId })
}

